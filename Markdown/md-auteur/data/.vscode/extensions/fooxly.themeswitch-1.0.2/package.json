{
	"name": "themeswitch",
	"displayName": "Theme Switch",
	"description": "Switch between your day and night themes",
	"author": "Fooxly",
	"publisher": "Fooxly",
	"license": "MIT",
	"icon": "assets/icon.png",
	"keywords": [
		"fooxly",
		"vscode",
		"code",
		"focus",
		"theme",
		"theming",
		"switch",
		"day",
		"night",
		"daynight",
		"statusbar"
	],
	"homepage": "https://github.com/Fooxly/themeswitch",
	"repository": {
		"type": "git",
		"url": "https://github.com/Fooxly/themeswitch.git"
	},
	"bugs": {
		"url": "https://github.com/Fooxly/themeswitch",
		"email": "bugs@fooxly.com"
	},
	"galleryBanner": {
		"color": "#FAFAFA",
		"theme": "light"
	},
	"version": "1.0.2",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "themeswitch.daytheme",
				"title": "Day theme"
			},
			{
				"command": "themeswitch.nighttheme",
				"title": "Night theme"
			},
			{
				"command": "themeswitch.toggle",
				"title": "Switch theme"
			}
		],
		"keybindings": [
			{
				"command": "themeswitch.toggle",
				"key": "ctrl+alt+t",
				"mac": "cmd+alt+t"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Theme Switch",
			"properties": {
				"themeswitch.priority": {
					"type": "number",
					"description": "The priority for the statubar toggle",
					"default": 0
				},
				"themeswitch.toggleDefaultDark": {
					"type": "boolean",
					"description": "If neither day or night theme are the current theme and the toggle is triggered, switch to dark theme",
					"default": true
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./ && yarn minify",
		"minify": "uglifyjs-folder -e -x .js -o out out",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"tslint": "^6.1.1",
		"typescript": "^3.8.3",
		"uglify-js": "^3.8.1",
		"uglifyjs-folder": "^1.5.2",
		"vscode": "^1.1.36"
	},
	"__metadata": {
		"id": "94ac9b98-e7d1-4bc0-b48f-bffb8d8b58b5",
		"publisherId": "694bf93c-933e-4a74-b8b1-0c92ef5d1a01",
		"publisherDisplayName": "Fooxly"
	}
}